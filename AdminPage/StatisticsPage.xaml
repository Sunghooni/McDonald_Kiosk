<Page x:Class="McDonald_Kiosk.AdminPage.StatisticsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:McDonald_Kiosk.AdminPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StatisticsPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="15*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Button Name="Button1" Width="250px" Height="40" Margin="0, 0, 550, 0" Click="Button1_Click">좌석/메뉴/카테고리</Button>
            <Button Name="Button2" Width="250px" Height="40" Margin="10, 0, 10, 0" Click="Button2_Click">일/시간대별</Button>
            <Button Name="Button3" Width="250px" Height="40" Margin="544, 0, 0, 0" Click="Button3_Click">회원별</Button>
        </Grid>

        <Grid Grid.Row="1">
            <Frame Name="ChartType" Source="ByMenu.xaml"></Frame>
        </Grid>
    </Grid>
</Page>
